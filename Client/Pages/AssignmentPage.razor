@page "/classroom/{roomid:int}/assignment/{assignmentid:int}"
@layout MainLayout
@using ClassHub.Client.Models

@code {
    [Parameter]
    public int RoomId { get; set; }

    [Parameter]
    public int AssignmentId { get; set; }

    private Assignment assignment;

    protected override async Task OnInitializedAsync() {
        // 실제 프로젝트에서는 서버로부터 데이터를 가져옴
        assignment = new Assignment { Id = AssignmentId, Title = "ASP.NET Core 프로젝트", Description = "첨부된 파일을 참고하여 텍스트 파일을 업로드하세요.", Author="조민경", Deadline = new DateTime(2023, 5, 2, 23, 50, 0), IsSubmitted = false, SubmissionDate = null, SubmissionFilePath = string.Empty };
    }
}