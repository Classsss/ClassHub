@page "/classroom/{roomid:int}/lecturematerial/edit/{noticeid:int}"
@layout MainLayout
@using ClassHub.Shared
@using ClassHub.Client.Shared.LectureMaterial

@if (noticeId == 0)
{
	<h3>새 강의자료 작성</h3>
}
else
{
	<h3>강의자료 수정</h3>
}

<LectureMaterialEditor id="noticeId" />

